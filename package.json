{
  "private": true,
  "workspaces": [
    "app"
  ],
  "scripts": {
    "start": "vercel dev",
    "dev": "pnpm -F '*' dev --parallel",
    "env:pull": "vercel env pull app/.env",
    "prepare": "husky install",
    "app:lint:format": "pnpm -F app lint:fix && pnpm -F app format",
    "test": "pnpm -F app test",
    "build": "pnpm -F app build && pnpm -F blog build"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "vercel": "^28.2.3"
  },
  "engines": {
    "node": "^16"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "pnpm -F app lint:fix",
      "pnpm -F app format"
    ]
  }
}
